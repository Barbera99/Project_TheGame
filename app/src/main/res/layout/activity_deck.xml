<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.DeckActivity"
    android:background="@drawable/bg_gradient">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="411dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/shop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/button_gradient"
            android:padding="20dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toStartOf="@+id/home"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/shop"
            tools:layout_editor_absoluteY="0dp" />

        <ImageButton
            android:id="@+id/deck"
            android:layout_width="158dp"
            android:layout_height="91dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/button_gradient"
            android:padding="20dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/deck"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />

        <ImageButton
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/button_gradient"
            android:padding="20dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toStartOf="@+id/deck"
            app:srcCompat="@drawable/home"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="385dp"
        android:layout_height="643dp"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/collection4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/collection3"
                tools:layout_editor_absoluteY="858dp">

                <ImageView
                    android:id="@+id/card_10"
                    android:layout_width="117dp"
                    android:layout_height="177dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toStartOf="@+id/card_11"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/card_10" />

                <ImageView
                    android:id="@+id/card_11"
                    android:layout_width="117dp"
                    android:layout_height="177dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/card_11" />

                <ImageView
                    android:id="@+id/card_12"
                    android:layout_width="117dp"
                    android:layout_height="177dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@+id/card_11"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/card_12" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv"
                android:layout_width="335dp"
                android:layout_height="4dp"
                android:layout_marginTop="8dp"
                android:background="@color/purple_200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv1" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="335dp"
                android:layout_height="4dp"
                android:background="@color/purple_200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv2" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="DECK"
                android:textColor="@color/accent"
                android:textSize="60sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="COLLECTION"
                android:textColor="@color/accent"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutDeck2" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutDeck1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv"
                tools:layout_editor_absoluteX="0dp">

                <ImageView
                    android:id="@+id/deck1"
                    android:layout_width="117dp"
                    android:layout_height="177dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toStartOf="@+id/deck2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/card_1" />

                <ImageView
                    android:id="@+id/deck2"
                    android:layout_width="117dp"
                    android:layout_height="177dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/card_2" />

                <ImageView
                    android:id="@+id/deck3"
                    android:layout_width="117dp"
                    android:layout_height="177dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@+id/deck2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/card_3" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutDeck2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/layoutDeck1"
                tools:layout_editor_absoluteX="0dp">

                <ImageView
                    android:id="@+id/deck4"
                    android:layout_width="117dp"
                    android:layout_height="177dp"
                    android:layout_marginStart="64dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/card_4" />

                <ImageView
                    android:id="@+id/deck5"
                    android:layout_width="117dp"
                    android:layout_height="177dp"
                    android:layout_marginEnd="64dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/card_5" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/collection1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv3"
                tools:layout_editor_absoluteX="-16dp">

                <ImageView
                    android:id="@+id/card_1"
                    android:layout_width="117dp"
                    android:layout_height="177dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toStartOf="@+id/card_2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/card_1" />

                <ImageView
                    android:id="@+id/card_2"
                    android:layout_width="117dp"
                    android:layout_height="177dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/card_2" />

                <ImageView
                    android:id="@+id/card_3"
                    android:layout_width="117dp"
                    android:layout_height="177dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@+id/card_2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/card_3" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/collection2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/collection1"
                tools:layout_editor_absoluteX="0dp">

                <ImageView
                    android:id="@+id/card_4"
                    android:layout_width="117dp"
                    android:layout_height="177dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toStartOf="@+id/card_5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/card_4" />

                <ImageView
                    android:id="@+id/card_5"
                    android:layout_width="117dp"
                    android:layout_height="177dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/card_5" />

                <ImageView
                    android:id="@+id/card_6"
                    android:layout_width="117dp"
                    android:layout_height="177dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@+id/card_5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/card_6" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/collection3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/collection2">

                <ImageView
                    android:id="@+id/card_7"
                    android:layout_width="117dp"
                    android:layout_height="177dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toStartOf="@+id/card_8"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/card_7" />

                <ImageView
                    android:id="@+id/card_8"
                    android:layout_width="117dp"
                    android:layout_height="177dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/card_8" />

                <ImageView
                    android:id="@+id/card_9"
                    android:layout_width="117dp"
                    android:layout_height="177dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@+id/card_8"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/card_9" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>